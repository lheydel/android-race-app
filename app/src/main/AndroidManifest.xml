<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lo52_f1_levier">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning"
        android:screenOrientation="landscape">
        <activity android:name=".view.TeamEditActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".view.CreateCourseActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".view.ParticipantEditActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".view.MenuActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lo52_f1_levier.view.coursetimer.CourseTimerActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".view.DetailsCourseTimerFragment"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>